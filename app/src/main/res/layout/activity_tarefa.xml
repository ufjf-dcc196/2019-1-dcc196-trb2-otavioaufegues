<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TarefaActivity">

<TableRow
android:layout_width="match_parent"
android:gravity="center">

    <TextView
            android:id="@+id/textDetTitulo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_span="2"
            android:gravity="center"
            android:padding="5dp"
            android:text=" Tarefa"
            android:textSize="28sp"/>


</TableRow>

<TableRow
android:layout_width="match_parent"
android:gravity="center">

<TextView
        android:layout_gravity="right|center"
        android:id="@+id/textDetTarefa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Título:" />

<EditText
        android:id="@+id/editTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:ems="12"
        android:hint="Digite o título"
        android:inputType="number"
        android:padding="5dp" />

</TableRow>

<TableRow
android:layout_width="match_parent"
android:gravity="center">

<TextView
        android:layout_gravity="right|center"
        android:id="@+id/textDetDescricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Descrição:" />

<EditText
        android:layout_gravity="left|center"
        android:id="@+id/editDetDescricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:ems="12"
        android:inputType="textMultiLine"
        android:hint="Descrição" />

</TableRow>

<TableRow
android:layout_width="match_parent"
android:gravity="center">

<TextView
        android:id="@+id/textDetDificuldade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:padding="5dp"
        android:text="Dificuldade:" />

<Spinner
        android:id="@+id/spinnerDificuldade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"/>

</TableRow>

<TableRow
android:layout_width="match_parent"
android:gravity="center">

    <TextView
            android:layout_gravity="right|center"
            android:id="@+id/textDtLimite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Data Limite:"/>

<EditText
        android:layout_gravity="left|center"
        android:id="@+id/editDetLimite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:ems="12"
        android:inputType="datetime"
        android:hint="Escolha a data limite" />

</TableRow>

<TableRow
android:layout_width="match_parent"
android:gravity="center">

    <TextView
            android:id="@+id/textDetEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:padding="5dp"
            android:text="Status:"/>

<Spinner
        android:id="@+id/spinnerStatus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"/>

</TableRow>

<TableRow
android:layout_width="match_parent"
android:gravity="center"
android:padding="10dp">

<Button
        android:id="@+id/buttonTagsTarefa"
        android:text="Ver tags"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content" />
    <Button
            android:id="@+id/buttonConfirma"
            android:text="Confirmar"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="134dp"
            android:layout_height="wrap_content"/>



</TableRow>

        </TableLayout>